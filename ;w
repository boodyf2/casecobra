"use client";
import { Button } from "@/components/ui/button";
import {
    DropdownMenu,
    DropdownMenuContent,
    DropdownMenuItem,
    DropdownMenuTrigger,
} from "@/components/ui/dropdown-menu";
import { OrderStatus } from "@prisma/client";
import { useMutation } from "@tanstack/react-query";
import { ChevronsUpDownIcon } from "lucide-react";
import { updateStatus } from "./actions";

interface OrderStatusDropdownProps {
    id: string;
    orderStatus: OrderStatus;
}

const ORDER_STATUSES: Record<OrderStatus, string> = {
    awaiting_shipment: "Awaiting Shippment",
    shipped: "Shipped",
    fulfilled: "Fulfilled",
};

const OrderStatusDropdown = ({ id, orderStatus }: OrderStatusDropdownProps) => {
    const { mutate: changeStatus } = useMutation({
        mutationKey: ["update-status"],
        mutationFn: async (args: { id: string; status: OrderStatus }) =>
            await updateStatus(args),
    });

    return (
        <DropdownMenu>
            <DropdownMenuTrigger>
                <Button variant="ghost">
                    {ORDER_STATUSES[orderStatus]}
                    <ChevronsUpDownIcon className="size-4 ml-2" />
                </Button>
            </DropdownMenuTrigger>
            <DropdownMenuContent>
                {Object.keys(ORDER_STATUSES).map((status) => (
                    <DropdownMenuItem
                        onClick={() => changeStatus({ id, status })}
                        key={status}
                    >
                        {ORDER_STATUSES[status as OrderStatus]}
                    </DropdownMenuItem>
                ))}
            </DropdownMenuContent>
        </DropdownMenu>
    );
};

export default OrderStatusDropdown;
